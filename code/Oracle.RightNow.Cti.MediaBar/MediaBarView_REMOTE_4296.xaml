                <Image Source="/Oracle.RightNow.Cti.Mediabar;component/Images/mediabar.info.voiceinteraction.png" Width="16" Height="16"
                       Margin="5,0,5,0"/>
                <TextBlock Text="{Binding CallCount}" FontFamily="Segoe UI" FontSize="16"/>
